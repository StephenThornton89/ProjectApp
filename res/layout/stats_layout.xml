<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/grass_background">

    <TextView
            android:layout_width="130dp"
            android:layout_height="28dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team 1"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="44dp" android:layout_marginTop="74dp" android:background="#ffffffff"
            android:textColor="#ffffffff"/>
    <TextView
            android:layout_width="130dp"
            android:layout_height="28dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team 2 "
            android:id="@+id/textView2"
            android:layout_above="@+id/textView3" android:layout_alignStart="@+id/textView4"
            android:background="#ffffffff" android:textColor="#ffffffff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals"
            android:id="@+id/textView3"
            android:layout_marginTop="23dp"
            android:textColor="#ffffffff"
            android:layout_below="@+id/textView" android:layout_alignStart="@+id/textView"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Goals"
              android:id="@+id/textView4"
              android:textColor="#ffffffff"
              android:layout_alignTop="@+id/textView5" android:layout_toStartOf="@+id/button9"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Points"
              android:id="@+id/textView5"
              android:textColor="#ffffffff"
              android:layout_alignTop="@+id/textView3" android:layout_alignStart="@+id/button2"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Points"
              android:id="@+id/textView8" android:textColor="#ffffffff"
              android:layout_alignTop="@+id/textView4" android:layout_alignStart="@+id/button"/>
    <Button android:layout_width="50dp" android:layout_height="40dp" android:text="+" android:id="@+id/button3"
            android:onClick="onClickPlusGoal2"
            android:background="#FF585858" android:textColor="#FFFFFFFF"
            android:layout_alignTop="@+id/button" android:layout_alignStart="@+id/textView4"/>
    <Button android:layout_width="50dp" android:layout_height="40dp" android:text="+" android:id="@+id/button"
            android:onClick="onClickPlusPoint2" android:background="#FF585858" android:textColor="#FFFFFFFF"
            android:layout_below="@+id/textView8" android:layout_alignEnd="@+id/button5"/>
    <Button android:layout_width="50dp" android:layout_height="40dp" android:text="+" android:id="@+id/button2"
            android:onClick="onClickPlusPoint1" android:background="#FF585858" android:textColor="#FFFFFFFF"
            android:layout_alignTop="@+id/button3" android:layout_alignStart="@+id/button7"/>
    <Button android:layout_width="50dp" android:layout_height="40dp" android:text="+" android:id="@+id/button4"
            android:onClick="onClickPlusGoal1" android:background="#FF585858" android:textColor="#FFFFFFFF"
            android:layout_alignTop="@+id/button2" android:layout_alignStart="@+id/textView3"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Stats"
            android:id="@+id/button5"
            android:background="#ff1aff3f"
            android:layout_centerVertical="true" android:layout_toEndOf="@+id/textView4"
            android:onClick="onClickStats1"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Stats"
            android:id="@+id/button6"
            android:background="#ff1aff3f"
            android:layout_alignTop="@+id/button5" android:layout_alignEnd="@+id/textView5"
            android:onClick="onClickStats2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFDFF44"
            android:text="Players Database"
            android:id="@+id/button7"
            android:textColor="#ff010101"
            android:onClick="onClickDB"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
            android:layout_marginBottom="42dp"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Teams"
            android:id="@+id/button9" android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:onClick="onClickupdateteams"/>
</RelativeLayout>